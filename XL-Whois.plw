#--------------------------#
sub btnApplyFilter_Click
#--------------------------#
{
  # Local variables
  my $field       = $winFilter->cbFilterField->GetCurSel(); # Field: 0 = '' (No value), 1 = 'Start IP', 2 = 'End IP', 3 = 'ISP', 4 = 'Country', 5 = 'Date'
  my $fieldStr    = $winFilter->cbFilterField->GetString($field);
  my $operator    = $winFilter->cbOperator->GetCurSel();
  my $operatorStr = $winFilter->cbOperator->GetString($operator);
  my $valueStr    = $winFilter->cbFilterValue->GetString($winFilter->cbFilterValue->GetCurSel());
  my @currFilters;
  my $filterStr;
  
  # If Add Filter, keep the current filter
  if ($ADD_FILTER == 1) {
    my $currFilterStr  = $winDB->tfFilterDB->Text();
    my $addOperatorStr = $winFilter->cbAddFilterOp->GetString($winFilter->cbAddFilterOp->GetCurSel()); # Add operator: 0 == OR, 1 == AND
    $addOperatorStr =~ s/AND/&&/;
    $addOperatorStr =~ s/OR/||/;
    $filterStr .= "$currFilterStr $addOperatorStr ";
  }
  
  # Case of a simple textfield (ISP, Contains or Not contains)
  if ($field == 3 and ($operator == 3 or $operator == 4)) { $valueStr = $winFilter->tfFilterValue->Text(); }
  
  # Filter string
  $filterStr .= "$fieldStr $operatorStr \"$valueStr\"";
  
  # Write new filter string in filter textfield
  $winDB->tfFilterDB->Text($filterStr);
  
  # Load Whois Database with Filters
  &applyFilters($filterStr);
  
  &winFilter_Terminate;

}  #--- End btnApplyFilter_Click

#--------------------------#
sub applyFilters
#--------------------------#
{
  # Local variables
  my $filterStr = shift;
  my @filters;
  my $nbrDisplayedRow = 0;
  
  # Split filters
  # Country equal "CA" OR ISP contains "Groupe Videotron" AND Date greater "2010-10-01"
  while ($filterStr =~ /((?: && | \|\| )?[^ ]+ [^ ]+ \"[^\"]+\")/) {
    my $filter = $1;
    push(@filters, $filter);
    my $filter2rem = quotemeta($filter);
    $filterStr =~ s/$filter2rem//;
  }
  
  # Apply each filter
  foreach (@filters) {
    my @partFilter = split(/ /, $_);
    my $addOperator;
    my $field;
    my $operator;
    my $value;
    # Additional filter
    if ($partFilter[1] eq '&&' or $partFilter[1] eq '||') {
      $addOperator = $partFilter[1];
      $field       = $partFilter[2];
      $operator    = $partFilter[3];
      for (my $i = 4; $i < scalar(@partFilter); $i++) { $value .= "$partFilter[$i] "; }
      $value =~ s/^\"//;
      $value =~ s/\" $//;
    # First filter
    } else {
      $field       = $partFilter[0];
      $operator    = $partFilter[1];
      for (my $i = 2; $i < scalar(@partFilter); $i++) { $value .= "$partFilter[$i] "; }
      $value =~ s/^\"//;
      $value =~ s/\" $//;
    }
    
    # Determine column to filter
    my $col2Filter;
    if    ($field eq $STR{'cbFilterField1'}) { $col2Filter = 0; }
    elsif ($field eq $STR{'cbFilterField2'}) { $col2Filter = 1; }
    elsif ($field eq $STR{'cbFilterField3'}) { $col2Filter = 2; }
    elsif ($field eq $STR{'cbFilterField4'}) { $col2Filter = 3; }
    else                                     { $col2Filter = 4; }
    
    # Operator is AND, look at displayed rows
    if ($addOperator and $addOperator eq '&&') {
      # Test each row
      for (my $i = 1; $i < $winDB->DBGrid->GetRows(); $i++) {
        my $rowHeight = $winDB->DBGrid->GetRowHeight($i);
        if ($rowHeight > 0) {
          my $f2filter = $winDB->DBGrid->GetCellText($i, $col2Filter);
          if    ($operator eq $STR{'equal'}        and $f2filter eq $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'notEqual'}     and $f2filter ne $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'greater'}      and $f2filter gt $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'greaterEqual'} and $f2filter ge $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'lower'}        and $f2filter lt $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'lowerEqual'}   and $f2filter le $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'contains'}     and $f2filter =~ /$value/ ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator eq $STR{'notContains'}  and $f2filter !~ /$value/ ) { $winDB->DBGrid->SetRowHeight($i, 22); }
          elsif ($operator)                                                    { $winDB->DBGrid->SetRowHeight($i, 0); $nbrDisplayedRow--; }
        }
      }
    
    # Operator is OR, only look at hidden rows
    } elsif ($addOperator and $addOperator eq '||') {
      # Test each row
      for (my $i = 1; $i < $winDB->DBGrid->GetRows(); $i++) {
        my $rowHeight = $winDB->DBGrid->GetRowHeight($i);
        if ($rowHeight == 0) {
          my $f2filter = $winDB->DBGrid->GetCellText($i, $col2Filter);
          if    ($operator eq $STR{'equal'}        and $f2filter eq $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'notEqual'}     and $f2filter ne $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'greater'}      and $f2filter gt $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'greaterEqual'} and $f2filter ge $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'lower'}        and $f2filter lt $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'lowerEqual'}   and $f2filter le $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'contains'}     and $f2filter =~ /$value/ ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator eq $STR{'notContains'}  and $f2filter !~ /$value/ ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
          elsif ($operator)                                                    { $winDB->DBGrid->SetRowHeight($i, 0); }
        }
      }
    
    # First filter, browse all the grid
    } else {
      # Test each row
      for (my $i = 1; $i < $winDB->DBGrid->GetRows(); $i++) {
        my $f2filter = $winDB->DBGrid->GetCellText($i, $col2Filter);
        if    ($operator eq $STR{'equal'}        and $f2filter eq $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'notEqual'}     and $f2filter ne $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'greater'}      and $f2filter gt $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'greaterEqual'} and $f2filter ge $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'lower'}        and $f2filter lt $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'lowerEqual'}   and $f2filter le $value   ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'contains'}     and $f2filter =~ /$value/ ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator eq $STR{'notContains'}  and $f2filter !~ /$value/ ) { $winDB->DBGrid->SetRowHeight($i, 22); $nbrDisplayedRow++; }
        elsif ($operator)                                                    { $winDB->DBGrid->SetRowHeight($i, 0); } 
      }
    }
  }
  
  $winDB->DBGrid->Refresh();
  my $nbrISP = $winDB->DBGrid->GetRows() - 1;
  $winDB->statusBar->Text(" $STR{'numberISP'}: $nbrISP | $STR{'numberISP'} $STR{'displayed'}: $nbrDisplayedRow");


}  #--- End applyFilters


#--------------------------#
sub time2Date
#--------------------------#
{
  # Local variables
  my $unixtime = shift;
  
  # Convert to string, local timezone
  my ($d,$m,$y) = (localtime($unixtime))[3,4,5];
  $y += 1900;
  $m++;
  $m = $m < 10 ? $m = "0".$m : $m;
  $d = $d < 10 ? $d = "0".$d : $d;
  return("$y-$m-$d");

}  #--- End time2Date

#--------------------------#
sub date
#--------------------------#
{
  # Local variables
  my ($time) = @_;
  
  # Conversion
  if (!$time or $time == 0) { $time = time; }
  my ($s,$min,$h,$d,$m,$y,$d_w,$ha,$isDST) = localtime($time);

  # Format
  $y += 1900;
  $m++;
  $m   = $m   < 10 ? $m   = "0".$m   : $m;
  $d   = $d   < 10 ? $d   = "0".$d   : $d;
  $h   = $h   < 10 ? $h   = "0".$h   : $h;
  $min = $min < 10 ? $min = "0".$min : $min;
  $s   = $s   < 10 ? $s   = "0".$s   : $s;
  
  return($s,$min,$h,$d,$m,$y,$d_w,$ha,$isDST);

}  #--- End date


          if ($data =~ /\.$/) { chop($data); }
          $data =~ s/ \)$//g;
          $data =~ s/^\( //g;
          $html .= '<td>' . $name  . '</td>' . "\n";
          $html .= '<td>' . $ttl   . '</td>' . "\n";
          $html .= '<td>' . $class . '</td>' . "\n";

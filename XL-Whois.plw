        $winLogDB->LogDBGrid->SetCellEditable($newLine, 2, 0);
        $winLogDB->LogDBGrid->SetCellEditable($newLine, 3, 1);
      } else { Win32::GUI::MessageBox($win, $STR{'errNewLine'}, $STR{'error'}, 0x40010); }
